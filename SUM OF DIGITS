import java.util.Scanner;
public class sum_of_digits
{
    public static void main(String args[])
    {
        Scanner sc=new Scanner(System.in);
        System.out.print("Enter the number: ");
        int num=sc.nextInt();
        int sum=0,r;
        int n=num;
        while(num!=0)
        {
            r=num%10;
            sum=sum+r;
            num=num/10;
        }
        System.out.println("The sum of digits is: "+sum);
    }
}
